<div id="sidebar-wrap" ng-controller="NavCtrl as navVM">
  <uib-accordion close-others="navVM.oneAtATime" slimscroll="{height: '100%'}">
    <uib-accordion-group is-open="navVM.status.isFirstOpen">
      <uib-accordion-heading>
        Navigation <i class="pull-right fa" ng-class="{'fa-angle-up': navVM.status.isFirstOpen, 'fa-angle-down': !navVM.status.isFirstOpen}"></i>
      </uib-accordion-heading>
      <ul id="navigation" nav-collapse ripple>
        <li ui-sref-active="active"><a ui-sref="app.dashboard"><fa name="dashboard"></fa> <span>{{ 'Menu.DASHBOARD' | translate }}</span></a></li>
      </ul>
    </uib-accordion-group>

  </uib-accordion>
</div>
